import java.util.Scanner;

public class SwitchCase1 {
    public static void main(String[] args) {
        // Switch case int, byte , short , long , char ,Enum 
        //int item = 4;

        // We can use Constant instead of number 1,2,3,4 
        // such as-  case BURGER 
        // final int BURGER =1;
        // final int PIZZA =2;
        // final int DRINKS =3;
        // final int DESSERT =4;
        Scanner sc = new Scanner(System.in);
        System.out.println("Choice 1 ,2 ,3 ,4");
        System.out.println("Select Your choice : ");
        int item = sc.nextInt();
        sc.close();
        switch (item){
            case 1:
            System.out.println("Price is 100");
            break; // Exit from Switch Block
            case 2: 
            System.out.println("Price is 200");
            break;
            case 3:
            System.out.println("Price is 300");
            break;
            case 4:
            System.out.println("Price is 50");
            break;
            default :
            System.out.println("50 % off on items.");
        }
    }
    
}
